<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:scrollbarSize="0dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Want to Become Owner?"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/lightSkyblue"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete below steps &amp; start your store online now! "
        android:textSize="15sp"
        android:fontFamily="@font/poppinsregular"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store Details :- "
        android:paddingLeft="20dp"
        android:textColor="@color/lightSkyblue"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            >

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name"
            android:background="@null"
            android:padding="8dp"
            android:fontFamily="@font/rubikregular"
            android:textSize="18dp"
            android:drawableLeft="@drawable/draw_profile"
            android:drawablePadding="10dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColor="@color/lightBlack"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/lightSkyblue"
          />
            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Last Name"
                android:padding="8dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/draw_profile"
                android:drawablePadding="10dp"
                android:background="@null"
                android:fontFamily="@font/rubikregular"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile number"
                android:padding="8dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                android:drawablePadding="10dp"
                android:background="@null"
                android:fontFamily="@font/rubikregular"
                android:inputType="number"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <EditText
                android:id="@+id/store_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Store Email Id (optional)"
                android:padding="8dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/draw_mail"
                android:drawablePadding="10dp"
                android:background="@null"
                android:fontFamily="@font/rubikregular"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <EditText
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Store Name"
                android:padding="8dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/draw_store"
                android:drawablePadding="10dp"
                android:background="@null"
                android:fontFamily="@font/rubikregular"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <EditText
                android:id="@+id/govt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Govt License/Shop Est Act"
                android:padding="8dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/draw_description"
                android:drawablePadding="10dp"
                android:background="@null"
                android:fontFamily="@font/rubikregular"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <EditText
                android:id="@+id/gstin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="GSTIN"
                android:padding="8dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/draw_receipt"
                android:drawablePadding="10dp"
                android:background="@null"
                android:fontFamily="@font/rubikregular"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <EditText
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category (eg Grocery,Fruits etc)"
                android:padding="8dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/draw_category"
                android:drawablePadding="10dp"
                android:background="@null"
                android:fontFamily="@font/rubikregular"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:background="@null"
                android:padding="8dp"
                android:fontFamily="@font/rubikregular"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_baseline_lock_open_24"
                android:drawablePadding="10dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/lightBlack"
                android:password="true"
                android:maxEms="15"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightSkyblue"
                />
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show password"
                android:textColor="@color/lightSkyblue"
                android:fontFamily="@font/rubikregular"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store Image :- "
        android:paddingLeft="20dp"
        android:textColor="@color/lightSkyblue"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        />
    <ImageView
        android:id="@+id/choose_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="15dp"
        android:src="@drawable/image_store"
        android:background="@drawable/image_bg"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Details :- "
        android:paddingLeft="20dp"
        android:textColor="@color/lightSkyblue"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/shopAddressTV"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Address"
        android:paddingLeft="20dp"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/address"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/locate_map"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@color/lightBlack"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banking Info :- "
        android:paddingLeft="20dp"
        android:textColor="@color/lightSkyblue"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the payment information below"
        android:textSize="12sp"
        android:fontFamily="@font/poppinsregular"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="10dp"
        >
    <EditText
        android:id="@+id/upi"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter UPI ID"
        android:background="@null"
        android:padding="8dp"
        android:fontFamily="@font/rubikregular"
        android:textSize="18dp"
        android:drawableLeft="@drawable/draw_card"
        android:drawablePadding="10dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textColor="@color/lightBlack"
        />
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/signup"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/btnback"
        android:text="Become Owner"
        android:fontFamily="@font/lemonmilklight"
        android:textColor="#ffffff"
        />

</LinearLayout>

</ScrollView>