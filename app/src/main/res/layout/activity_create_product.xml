<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProductActivity"
    android:scrollbarSize="0dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete below steps &amp; to Add Your Product"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsregular"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Details :- "
            android:paddingLeft="20dp"
            android:textColor="@color/lightSkyblue"
            android:fontFamily="@font/poppinsregular"
            android:textSize="15sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                >

                <EditText
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Product Name"
                    android:background="@null"
                    android:padding="8dp"
                    android:fontFamily="@font/rubikregular"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/draw_profile"
                    android:drawablePadding="10dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="@color/lightBlack"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/lightSkyblue"
                    />
                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Quantity"
                    android:padding="8dp"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/draw_profile"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:fontFamily="@font/rubikregular"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="@color/lightBlack"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/lightSkyblue"
                    />
                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Price"
                    android:padding="8dp"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/draw_profile"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:fontFamily="@font/rubikregular"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="@color/lightBlack"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/lightSkyblue"
                    />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Description"
                    android:padding="8dp"
                    android:textSize="18dp"
                    android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:fontFamily="@font/rubikregular"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="@color/lightBlack"
                    android:minLines="5"
                    android:gravity="start"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/lightSkyblue"
                    />

                <Spinner
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category (eg Grocery,Fruits etc)"
                    android:padding="8dp"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/draw_category"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:fontFamily="@font/rubikregular"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="@color/lightBlack"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/lightSkyblue"
                    />
                <Spinner
                    android:id="@+id/subCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sub Category"
                    android:background="@null"
                    android:padding="8dp"
                    android:fontFamily="@font/rubikregular"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/draw_category"
                    android:drawablePadding="10dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="@color/lightBlack"
                    android:maxEms="15"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Image :- "
            android:paddingLeft="20dp"
            android:textColor="@color/lightSkyblue"
            android:fontFamily="@font/poppinsregular"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/choose_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:src="@drawable/cart1"
            android:background="@drawable/image_bg"
            />

        <Button
            android:id="@+id/productBtn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/btnback"
            android:text="Add Product"
            android:fontFamily="@font/lemonmilklight"
            android:textColor="#ffffff"
            android:onClick="addProductBtnClick"
            />

    </LinearLayout>

</ScrollView>