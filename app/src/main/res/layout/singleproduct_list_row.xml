<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:id="@+id/imv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/bbsnacks" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/imv"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_margin="5dp"
                >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 265.00"
                    android:layout_weight="1"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/rubikregular"
                    />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nestle Multigrain &amp; Fruit Baby Cerelac"
                    android:fontFamily="@font/rubikregular"
                    android:textColor="#000000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="2"
                    >
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/weightbg"
                        android:layout_marginRight="10dp"
                        android:text="300 gm"
                        android:fontFamily="@font/rubikregular"
                        android:textAlignment="gravity"
                        android:textColor="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:id="@+id/cartBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/cartadd_bg"
                        android:text="View Detail"
                        android:textColor="#ffffff"
                        android:textAlignment="gravity"
                        android:fontFamily="@font/rubikregular"
                        android:gravity="center_horizontal|center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>